<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cv_movie"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
                    android:id="@+id/img_movie"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:src="@color/colorAccent"/>

                <TextView
                    android:id="@+id/tv_judul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:text="judul"
                    android:layout_toRightOf="@+id/img_movie"/>

                <TextView
                    android:id="@+id/tv_durasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_judul"
                    android:layout_toRightOf="@+id/img_movie"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Durasi"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_durasi"
                    android:layout_toRightOf="@+id/img_movie"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Harga"
                    android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_tayang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_harga"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-42dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/tv_durasi"
            android:layout_toRightOf="@+id/img_movie"
            android:text="Tayang"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_harga"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/img_movie"
            android:text="Direktor"
            android:textSize="16sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>